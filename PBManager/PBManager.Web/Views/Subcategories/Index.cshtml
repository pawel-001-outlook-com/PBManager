@* @model IEnumerable<PBManager.Core.Models.Subcategory> *@
@model IEnumerable<PBManager.Dto.ViewModels.SubcategoryViewModel>

@{
    ViewBag.Title = "Subcategories";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <br><small>Manage subcategories</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-primary">
            <div class="box-body">
                <div class="row">
                    <div class="col-md-2">
                        <a href="@Url.Action("New", "Subcategories")" class="btn btn-flat btn-block btn-success"><i class="fa fa-plus"></i> New subcategory</a>
                    </div>
                </div>
                <br />
                <table class="table table-hover datatable" style="width: 100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Category</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var subcategory in Model)
                        {
                            <tr>
                                <td>@subcategory.Name</td>
                                <td>@subcategory.Category.Name</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("View", "Subcategories", new { Id = subcategory.Id})" class="btn btn-flat btn-default"><i class="fa fa-eye"></i> View</a>
                                        <a href="@Url.Action("Edit", "Subcategories", new { Id = subcategory.Id })" class="btn btn-flat btn-default"><i class="fa fa-pencil-square-o"></i> Edit</a>
                                        <a href="@Url.Action("Delete", "Subcategories", new { Id = subcategory.Id})" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
