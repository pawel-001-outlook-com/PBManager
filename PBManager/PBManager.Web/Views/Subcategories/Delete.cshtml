@model PBManager.Dto.ViewModels.SubcategoryViewModel
@{
    ViewBag.Title = "Delete subcategory";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <br><small>Delete the subcategory</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Subcategories")">Subcategories</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="box box-danger">
            <div class="box-body">
                <div class="alert alert-danger alert-dismissible">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <h4><i class="icon fa fa-warning"></i> Alert!</h4>
                    This operation can not be undone!
                </div>
                <dl class="dl-horizontal">
                    <dt>@Html.DisplayNameFor(m => m.Name)</dt>
                    <dd>@Html.DisplayFor(m => m.Name)</dd>

                    <dt>@Html.DisplayNameFor(m => m.Category.Type)</dt>
                    <dd>@Html.DisplayFor(m => m.Category.Type)</dd>

                    <dt>@Html.DisplayNameFor(m => m.Category.Name)</dt>
                    <dd>@Html.DisplayFor(m => m.Category.Name)</dd>
                </dl>
                <form action="@Url.Action("Delete", "Subcategories")" method="post">

                    @Html.HiddenFor(m => m.Id)
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</button>
                </form>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
