@model PBManager.Dto.ViewModels.CategoryViewModel

@{
    ViewBag.Title = "Category view";

    // string categoryType = (Model.Type.Equals("C")) ? "Credit" : "Debit";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            
        </h1>
        <ol class="breadcrumb">
            <li><a href=""><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="@Url.Action("Index", "Categories")">Categories</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-8">
                <!-- box -->
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-7">
                                <form role="form">
                                    <div class="row">
                                        <div class="col-xs-2">
                                            <div class="form-group">
                                                @Html.LabelFor(m => m.Id)
                                                @Html.TextBoxFor(m => m.Id, new { Class = "form-control", Readonly = "readonly" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Name)
                                        @Html.TextBoxFor(m => m.Name, new { Class = "form-control", Readonly = "readonly" })
                                    </div>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                @* @Html.LabelFor(c => c.Type) *@
                                                @* @Html.TextBox("Type", categoryType, new { Class = "form-control", Readonly = "readonly" }) *@
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">

                                    </div>
                                    <br />
                                    <a href="@Url.Action("Edit", "Categories", new { Id = Model.Id})" class="btn btn-sm btn-warning btn-flat pull-left"><i class="fa fa-pencil-square-o"></i> Edit category</a>
                                    <a href="@Url.Action("Delete", "Categories", new { Id = Model.Id})" class="btn btn-sm btn-danger btn-flat pull-left"><i class="fa fa-trash-o"></i> Delete category</a>
                                </form>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <div class="col-md-4">
                <!-- table-box -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Subcategories</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    

                    <div class="box-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var subcategory in Model.Subcategories)
                                {
                                    <tr>
                                        <td>@subcategory.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.body -->
                    <div class="box-footer clearfix">
                        @* <a href="@Url.Action("New", "Subcategories")" class="btn btn-sm btn-info btn-flat pull-left"><i class="fa fa-plus"></i> New subcategory</a> *@
                    </div><!-- /.box-footer -->
                </div><!-- ./table-box -->
            </div>
        </div>
        

        <div class="row">
            <div class="col-md-12">
                <div class="box box-primary"><!-- table-box -->
                    <div class="box-header with-border">
                        <h3 class="box-title">Category data</h3>
                        <div class="box-tools pull-right">
                            <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                <i class="fa fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table class="table table-bordered table-striped datatable" style="width: 100%;">
                            <thead>
                                <tr>
                                    <th>Description</th>
                                    <th>Type</th>
                                    <th>AccountingDate</th>
                                    <th>Total value</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cashflow in Model.Cashflows.Take(5).OrderByDescending(m => m.Id))
                                {
                                    <tr>
                                        <td>@cashflow.Description</td>
                                        <td>@cashflow.AccountingDate.ToShortDateString()</td>
                                        <td>@cashflow.Value.ToString("F2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.body -->
                    <div class="box-footer clearfix">
                        <a href="@Url.Action("New", "Cashflows")" class="btn btn-sm btn-info btn-flat pull-left"><i class="fa fa-plus"></i> Add cashflow </a>
                    </div>
                    <!-- /.box-footer -->
                </div>
                <!-- ./table-box -->
            </div>
        </div>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
