@model IEnumerable<PBManager.Dto.ViewModels.CategoryViewModel>

@{
    ViewBag.Title = "Categories";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <br/><small>Manage categories</small>
        </h1>
    </section>
    <!-- Main content -->
    <section class="content">

        <div class="row">
            <div class="col-md-10">

                <!-- box -->
                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2">
                                <a href="#" onclick="AddCategory()" class="btn btn-flat btn-block btn-success"><i class="fa fa-plus"></i> New category</a>
                            </div>
                        </div>
                        <br/>
                        <table class="table table-hover data-table" id="tblCategory">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>No of subcategories</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>
    </section>
    <!-- /.content -->


    <div class="modal fade" id="categoryViewModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Category details</h3>
                </div>
                <div class="modal-body" id="categoryViewModalBody">
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="categoryEditModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Edit category</h3>
                </div>
                <div class="modal-body" id="categoryEditModalBody">
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="categoryDeleteModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Edit category</h3>
                </div>
                <div class="modal-body" id="categoryDeleteModalBody">
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="categoryAddNewModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title content-header">Add category</h3>
                </div>
                <div class="modal-body" id="categoryAddNewModalBody">
                </div>
            </div>
        </div>
    </div>


</div>
<!-- /.content-wrapper -->


@section Scripts {
    <script src="~/Content/AdminLte2/plugins/datatables/jquery.dataTables.js"></script>

    <script type="text/javascript">


        $(function() {

            $.ajaxSetup({
                cache: false
            });

            $("#tblCategory")
                .DataTable({
                    "serverSide": true,
                    "ajax": "/Categories/CategoryData",
                    columnDefs: [{ orderable: false, targets: [2] }],
                    "columns": [
                        { "data": "Name" },
                        { "data": "NoOfSubcategories" },
                        {
                            data: null,
                            render: function(data, type, row) {
                                return "<a href+'#' onclick='ShowCategory(" + row.Id + ")' class='btn btn-flat btn-default'><i class='fa fa-eye'></i> View</a>" + "<a href='#' onclick='EditCategory(" + row.Id + ")' class='btn btn-flat btn-default'><i class='fa fa-pencil-square-o'></i> Edit</a>" + "<a href='#' onclick='DeleteCategory(" + row.Id + ")' class='btn btn-flat btn-danger'><i class='fa fa-trash-o'></i> Delete</a> ";
                            }
                        }
                    ],
                    searchDelay: 2000
                });

        });


        var ShowCategory = function(categoryId) {

            var url = "/Categories/View/" + categoryId;

            $("#categoryViewModalBody").load(url,
                function() {
                    $("#categoryViewModal").modal("show");

                });
        };

        var EditCategory = function(categoryId) {

            var url = "/Categories/Edit/" + categoryId;

            $("#categoryEditModalBody").load(url,
                function() {
                    $("#categoryEditModal").modal("show");

                });
        };


        var DeleteCategory = function(categoryId) {

            var url = "/Categories/Delete/" + categoryId;

            $("#categoryDeleteModalBody").load(url,
                function() {
                    $("#categoryDeleteModal").modal("show");

                });
        };

        var AddCategory = function() {

            var url = "/Categories/New/";

            $("#categoryAddNewModalBody").load(url,
                function() {
                    $("#categoryAddNewModal").modal("show");

                });
        };

    </script>
}