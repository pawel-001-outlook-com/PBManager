@model  PBManager.Dto.ViewModels.ProjectViewModel

<!-- Main content -->
<section class="content">
    <!-- box -->
    <div class="box box-success">
        <div class="box-body">
            <div class="row">
                <div class="col-md-12">
                    <form id="projectEditForm">

                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Id)
                                    @Html.TextBoxFor(m => m.Id, new {Class = "form-control", Readonly = "readonly"})
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new {Class = "form-control"})
                                    @Html.ValidationMessageFor(m => m.Name, "", new {Class = "text-red"})
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.StartDate)
                                    @Html.TextBoxFor(m => m.StartDate, DateTime.Now.ToShortDateString(), new {Class = "form-control", Readonly = "readonly"})
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Description)
                                    @Html.TextAreaFor(m => m.Description, new {Class = "form-control"})
                                </div>
                            </div>
                        </div>

                        @Html.HiddenFor(m => m.UserId)
                        @Html.AntiForgeryToken()
                        <a href="#" id="btnSubmit" class="btn btn-primary btn-flat pull-left"><i class="fa fa-floppy-o"></i> Save</a>
                    </form>

                </div>
            </div>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->
</section>
<!-- /.content -->


@Scripts.Render("~/bundles/jqueryval")


<script type="text/javascript">


    $(document).ready(function() {

        $("#btnSubmit").click(function() {


            var projectformdata = $("#projectEditForm").serialize();

            if (!$("#projectEditForm").valid()) {
                return false;
            }


            $.ajax({
                type: "POST",
                url: "/Projects/Edit",
                data: projectformdata,
                success: function() {
                    $("#projectEditModal").modal("hide");
                    toastr.success("Success");
                    $("#tblProject").DataTable().ajax.reload();
                },
                error: function(xhr) {
                    var obj = JSON.parse(xhr.responseText);
                    toastr.error("Unexpected error: " + obj.g);
                }
            });
        });


    });

</script>