@model IEnumerable<PBManager.Dto.ViewModels.CashflowViewModel>

@{
    ViewBag.Title = "Cashflows";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <br/><small>Manage cashflows</small>
        </h1>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="row">
            <div class="col-md-10">

                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2">
                                <a href="#" onclick="AddCashflow()" class="btn btn-flat btn-block btn-success"><i class="fa fa-plus"></i> New cashflow</a>
                            </div>
                        </div>
                        <br/>
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-hover data-table" id="tblCashflow">
                                    <thead>
                                    <tr>
                                        <th>Accounting date</th>
                                        <th>Name</th>
                                        <th>Value</th>
                                        <th>Account</th>
                                        <th>Category</th>
                                        <th>Subcategory</th>
                                        <th>Project</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
        </div>
        <!-- /.box -->
    </section>
    <!-- /.content -->


    <div class="modal fade" id="cashflowViewModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Cashflow details</h3>
                </div>
                <div class="modal-body" id="cashflowViewModalBody">
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="cashflowEditModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Edit account</h3>
                </div>
                <div class="modal-body" id="cashflowEditModalBody">
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="cashflowDeleteModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title">Edit cashflow</h3>
                </div>
                <div class="modal-body" id="cashflowDeleteModalBody">
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="cashflowAddNewModal">
        <div class="modal-dialog" style="width: 800px">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title content-header">Add cashflow</h3>
                </div>
                <div class="modal-body" id="cashflowAddNewModalBody">
                </div>
            </div>
        </div>
    </div>


</div>
<!-- /.content-wrapper -->


@section Scripts {
    <script src="~/Content/AdminLte2/plugins/datatables/jquery.dataTables.js"></script>

    <script type="text/javascript">


        $(function() {

            $.ajaxSetup({
                cache: false
            });

            $("#tblCashflow")
                .DataTable({
                    "serverSide": true,
                    "ajax": "/Cashflows/CashflowData",
                    columnDefs: [{ orderable: false, targets: [7] }],
                    "columns": [
                        { "data": "AccountingDate" },
                        { "data": "Name" },
                        { "data": "Value" },
                        { "data": "Account" },
                        { "data": "Category" },
                        { "data": "Subcategory" },
                        { "data": "Project" },
                        {
                            data: null,
                            render: function(data, type, row) {
                                return "<a href+'#' onclick='ShowCashflow(" + row.Id + ")' class='btn btn-flat btn-default'><i class='fa fa-eye'></i> View</a>" + "<a href='#' onclick='EditCashflow(" + row.Id + ")' class='btn btn-flat btn-default'><i class='fa fa-pencil-square-o'></i> Edit</a>" + "<a href='#' onclick='DeleteCashflow(" + row.Id + ")' class='btn btn-flat btn-danger'><i class='fa fa-trash-o'></i> Delete</a> ";

                            }
                        }
                    ],
                    searchDelay: 2000
                });

        });


        var ShowCashflow = function(cashflowId) {

            var url = "/Cashflows/View/" + cashflowId;

            $("#cashflowViewModalBody").load(url,
                function() {
                    $("#cashflowViewModal").modal("show");

                });
        };

        var EditCashflow = function(cashflowId) {

            var url = "/Cashflows/Edit/" + cashflowId;

            $("#cashflowEditModalBody").load(url,
                function() {
                    $("#cashflowEditModal").modal("show");

                });
        };


        var DeleteCashflow = function(cashflowId) {

            var url = "/Cashflows/Delete/" + cashflowId;

            $("#cashflowDeleteModalBody").load(url,
                function() {
                    $("#cashflowDeleteModal").modal("show");

                });
        };

        var AddCashflow = function() {

            var url = "/Cashflows/New/";

            $("#cashflowAddNewModalBody").load(url,
                function() {
                    $("#cashflowAddNewModal").modal("show");

                });
        };

    </script>
}