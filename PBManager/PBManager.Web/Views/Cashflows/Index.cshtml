@model IEnumerable<PBManager.Dto.ViewModels.CashflowViewModel>

@{
    ViewBag.Title = "Cashflows";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <br /><small>Manage cashflows</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action("Index", "Home")"><i class=""></i> Home</a></li>
            <li class="active">@ViewBag.Title</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- box -->
        <div class="row">
            <div class="col-md-10">

                <div class="box box-primary">
                    <div class="box-body">
                        <div class="row">
                            <div class="col-md-2">
                                <a href="@Url.Action("New", "Cashflows")" class="btn btn-flat btn-block btn-success">
                                    <i class="fa fa-plus"></i>New cashflow
                                </a>
                            </div>
                        </div>
                        <br />
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="table table-hover datatable">
                                    <thead>
                                        <tr>
                                            <th>Accounting date</th>
                                            <th>Name</th>
                                            <th>Value</th>
                                            <th>Account</th>
                                            <th>Category</th>
                                            <th>Subcategory</th>
                                            <th>Project</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    @foreach (var cashflow in Model)
                                    {
                                        <tr>
                                            <td>@cashflow.AccountingDate.ToShortDateString()</td>
                                            <td>@cashflow.Name</td>
                                            <td>@cashflow.Value.ToString("F2")</td>
                                            <td>@cashflow.Account.Name</td>
                                            <td>
                                                @if (@cashflow.Category == null)
                                                {
                                                    <span class="label label-warning">no category</span>
                                                }
                                                @if (@cashflow.Category != null)
                                                {
                                                    @cashflow.Category.Name
                                                }
                                            </td>
                                            <td>
                                                @if (@cashflow.Subcategory == null)
                                                {
                                                    <span class="label label-warning">no subcategory</span>
                                                }
                                                @if (@cashflow.Subcategory != null)
                                                {
                                                    @cashflow.Subcategory.Name
                                                }
                                            </td>
                                            <td>
                                            @if (@cashflow.Project == null)
                                            {
                                                <span>no project</span>
                                            }
                                            @if (@cashflow.Project != null)
                                            {
                                                @cashflow.Project.Name

                                            }
                                            </td>

                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("View", "Cashflows", new { Id = cashflow.Id})" class="btn btn-flat btn-default"><i class="fa fa-eye"></i> View</a>
                                                    <a href="@Url.Action("Edit", "Cashflows", new { Id = cashflow.Id})" class="btn btn-flat btn-default"><i class="fa fa-pencil-square-o"></i> Edit</a>
                                                    <a href="@Url.Action("Delete", "Cashflows", new { Id = cashflow.Id})" class="btn btn-flat btn-danger"><i class="fa fa-trash-o"></i> Delete</a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                </div>
            </div>
            </div>
                <!-- /.box -->
</section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
